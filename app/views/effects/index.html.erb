<h1>Listing effects</h1>

<table>
  <tr>
    <th>Spell</th>
    <th>Slot</th>
    <th>Effect</th>
    <th>Formula</th>
    <th>Base1</th>
    <th>Base2</th>
    <th>Max</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @effects.each do |effect| %>
  <tr>
    <td><%= effect.spell_id %></td>
    <td><%= effect.slot %></td>
    <td><%= effect.effect %></td>
    <td><%= effect.formula %></td>
    <td><%= effect.base1 %></td>
    <td><%= effect.base2 %></td>
    <td><%= effect.max %></td>
    <td><%= link_to 'Show', effect %></td>
    <td><%= link_to 'Edit', edit_effect_path(effect) %></td>
    <td><%= link_to 'Destroy', effect, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

